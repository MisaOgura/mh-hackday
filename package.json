{
  "name": "react-static-app-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for simple static react app",
  "main": "",
  "scripts": {
    "deploy": "",
    "deploy:dev": "",
    "postdeploy": "",
    "start": "webpack-dev-server --open",
    "build": "webpack --config webpack.prod.config.js --profile --colors",
    "test": "jest --coverage && standard",
    "test:ci": "jest --coverage --ci --updateSnapshot && standard",
    "test:watch": "jest --watch",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "javascript",
    "react",
    "es6",
    "express",
    "webpack",
    "babel",
    "docker",
    "jest"
  ],
  "author": "Misa Ogura",
  "license": "ISC",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^20.0.4",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.9",
    "react-test-renderer": "^16.0.0",
    "standard": "^10.0.3",
    "style-loader": "^0.19.0",
    "webpack": "^3.5.3",
    "webpack-dev-server": "^2.8.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "./src/shim.js"
    ],
    "setupFiles": [
      "<rootDir>/src/shim.js",
      "<rootDir>/src/setupTest.js"
    ]
  },
  "standard": {
    "globals": [
      "jest",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "beforeAll"
    ]
  },
  "browserslist": [
    "> 5%",
    "last 10 versions",
    "not ie < 9"
  ]
}
